<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wenzhuo4657.dailyWeb.infrastructure.database.dao.DataversionDao">

    <resultMap type="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.Dataversion" id="DataversionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tag" column="tag" jdbcType="VARCHAR"/>
        <result property="log" column="Log" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DataversionMap">
        select
id, tag, Log
        from dataVersion
        where id = #{id}
    </select>


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from dataVersion
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tag != null and tag != ''">
                and tag = #{tag}
            </if>
            <if test="log != null and log != ''">
                and Log = #{log}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into dataVersion(tag, Log)
        values (#{tag}, #{log})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into dataVersion(tag, Log)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.tag}, #{entity.log})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into dataVersion(tag, Log)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tag}, #{entity.log})
        </foreach>
        on duplicate key update
tag = values(tag),
Log = values(Log)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update dataVersion
        <set>
            <if test="tag != null and tag != ''">
                tag = #{tag},
            </if>
            <if test="log != null and log != ''">
                Log = #{log},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from dataVersion where id = #{id}
    </delete>

</mapper>

