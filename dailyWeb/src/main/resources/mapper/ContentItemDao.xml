<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wenzhuo4657.dailyWeb.dao.ContentItemDao">


    <insert id="insert" parameterType="cn.wenzhuo4657.dailyWeb.entity.ContentItem">
        insert into content_item(content_name_id,content,field,date)
        values(#{content_name_Id},#{content},#{field},#{data})
    </insert>
    <update id="update" parameterType="cn.wenzhuo4657.dailyWeb.entity.ContentItem">
        update content_item
        set content=#{content}
        where id=#{id} and content_name_id=#{content_name_Id}
    </update>


    <select id="queryByContentId" resultType="cn.wenzhuo4657.dailyWeb.entity.ContentItem">
        select * from content_item where content_name_id=#{i}  order by date  desc
    </select>
</mapper>
