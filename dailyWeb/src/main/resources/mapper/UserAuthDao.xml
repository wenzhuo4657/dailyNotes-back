<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wenzhuo4657.dailyWeb.infrastructure.database.dao.UserAuthDao">

    <resultMap type="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.UserAuth" id="UserAuthMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="docsTypeId" column="docs_type_id" jdbcType="BIGINT"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserAuthMap">
        select
id, user_id, docs_type_id
        from user_auth
        where id = #{id}
    </select>


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user_auth
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="docsTypeId != null">
                and docs_type_id = #{docsTypeId}
            </if>
        </where>
    </select>
    <select id="queryByUserIdAndtypeId"
            resultType="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.Docs">
        select  t2.*
        from user_auth t1
        left join docs t2 on t1.docs_type_id = t2.type_id
        where t1.user_id = #{userId}
            and t1.docs_type_id = #{typeId}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user_auth(user_id, docs_type_id)
        values (#{userId}, #{docsTypeId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user_auth(user_id, docs_type_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.userId}, #{entity.docsTypeId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user_auth(user_id, docs_type_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.docsTypeId})
        </foreach>
        on duplicate key update
user_id = values(user_id),
docs_type_id = values(docs_type_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_auth
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="docsTypeId != null">
                docs_type_id = #{docsTypeId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user_auth where id = #{id}
    </delete>

</mapper>

