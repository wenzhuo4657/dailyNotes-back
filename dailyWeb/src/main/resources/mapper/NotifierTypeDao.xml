<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wenzhuo4657.dailyWeb.infrastructure.database.dao.NotifierTypeDao">

    <resultMap type="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.NotifierType" id="NotifierTypeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="typeId" column="type_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="des" column="des" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NotifierTypeMap">
        select
id, type_id, name, des
        from notifier_type
        where id = #{id}
    </select>


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from notifier_type
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="typeId != null">
                and type_id = #{typeId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="des != null and des != ''">
                and des = #{des}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into notifier_type(type_id, name, des)
        values (#{typeId}, #{name}, #{des})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into notifier_type(type_id, name, des)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.typeId}, #{entity.name}, #{entity.des})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into notifier_type(type_id, name, des)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.typeId}, #{entity.name}, #{entity.des})
        </foreach>
        on duplicate key update
type_id = values(type_id),
name = values(name),
des = values(des)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update notifier_type
        <set>
            <if test="typeId != null">
                type_id = #{typeId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="des != null and des != ''">
                des = #{des},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from notifier_type where id = #{id}
    </delete>

</mapper>

