<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wenzhuo4657.dailyWeb.infrastructure.database.dao.UsernotifierDao">

    <resultMap type="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.Usernotifier" id="UsernotifierMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userid" column="userId" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="config" column="config" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UsernotifierMap">
        select
id, userId, type, config
        from userNotifier
        where id = #{id}
    </select>


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from userNotifier
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userid != null">
                and userId = #{userid}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="config != null and config != ''">
                and config = #{config}
            </if>
        </where>
    </select>
    <select id="queryByNotifyId" resultType="java.lang.String">
        select config from userNotifier where id = #{notifyId}
    </select>
    <select id="querByUserId" resultType="cn.wenzhuo4657.dailyWeb.infrastructure.database.entity.Usernotifier">
        select * from userNotifier where userId = #{userId}
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into userNotifier(userId, type, config)
        values (#{userid}, #{type}, #{config})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into userNotifier(userId, type, config)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.userid}, #{entity.type}, #{entity.config})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into userNotifier(userId, type, config)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userid}, #{entity.type}, #{entity.config})
        </foreach>
        on duplicate key update
userId = values(userId),
type = values(type),
config = values(config)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update userNotifier
        <set>
            <if test="userid != null">
                userId = #{userid},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="config != null and config != ''">
                config = #{config},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from userNotifier where id = #{id}
    </delete>

</mapper>

